{% if pagination.pages > 1 %}
  <nav role="navigation" style=" width: 100%; display:flex; justify-content:center; align-items:center;">
    {% if pagination.previous %}
      <a
        href="{{ pagination.previous.url }}"
        class="pagination_previous"
        >Previous</a
      >
    {% endif %}

    {% for part in pagination.parts %}
      {% if part.is_link %}
        <a href="{{ part.url }}">{{ part.title }}</a>
      {% else %}
        <span>{{ part.title }}</span>
      {% endif %}
    {% endfor %}

    {% if pagination.next %}
      <a
        href="{{ pagination.next.url }}"
        class="pagination_next"
        >Next</a
      >
    {% endif %}
  </nav>
{% endif %}
